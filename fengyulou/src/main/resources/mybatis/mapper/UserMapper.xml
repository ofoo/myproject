<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.guoguo.fengyulou.dao.UserDao">

    <resultMap id="UserResult" type="User">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="pwd" column="pwd"/>
        <result property="image" column="image"/>
        <result property="position" column="position"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="fengyulou_user_columns">
		fengyulou_user.id,
		fengyulou_user.name,
		fengyulou_user.pwd,
		fengyulou_user.image,
		fengyulou_user.position,
		fengyulou_user.create_time,
		fengyulou_user.update_time
	</sql>

    <sql id="fengyulou_user_properties">
		#{id},
		#{name},
		#{pwd},
		#{image},
		#{position},
		now(),
		now()
	</sql>

    <insert id="addUser">
        insert into fengyulou_user(<include refid="fengyulou_user_columns"/>)
        value(<include refid="fengyulou_user_properties"/>)
    </insert>

    <update id="updateUserName">
        update fengyulou_user set `name`=#{name},update_time=now() where id=#{id}
    </update>

    <update id="updateUserImage">
        update fengyulou_user set `image`=#{image},update_time=now() where id=#{id}
    </update>

    <update id="updateUserPwd">
        update fengyulou_user set `pwd`=#{pwd},update_time=now() where id=#{id}
    </update>

    <update id="updateUser">
        update fengyulou_user set
        `name`=#{name},
        `position`=#{position},
        image=#{image},
        update_time=now()
        where id=#{id}
    </update>

    <select id="getUserList" resultMap="UserResult">
        select id,`name`,image,`position`
        from fengyulou_user
        <where>
            <if test="name!=null">
                and name like CONCAT('%',#{name},'%')
            </if>
        </where>
    </select>

    <select id="getUserByName" resultMap="UserResult">
        select id,`name`,pwd,image,`position`
        from fengyulou_user where `name`=#{value}
    </select>

    <select id="getUserById" resultType="com.guoguo.fengyulou.entity.User">
        select id,`name`,image,`position` from fengyulou_user where id=#{id}
    </select>

    <select id="getUserCountByName" resultType="java.lang.Integer">
        select ifnull(count(1),0) from fengyulou_user where `name`=#{name};
    </select>
</mapper>